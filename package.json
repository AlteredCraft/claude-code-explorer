{
  "name": "claude-explorer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:client": "next dev",
    "dev:api": "cd api-py && uv run uvicorn src.main:app --reload --port 3001",
    "dev:api:ts": "npm --prefix api run dev",
    "dev:all": "npm run dev:api & npm run dev:client",
    "build": "next build",
    "build:api": "npm --prefix api run build",
    "build:all": "npm run build:api && npm run build",
    "start": "next start",
    "start:api": "cd api-py && uv run uvicorn src.main:app --port 3001",
    "start:api:ts": "npm --prefix api run start",
    "start:all": "npm run start:api & npm run start",
    "lint": "eslint",
    "install:all": "npm install && cd api-py && uv sync"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
